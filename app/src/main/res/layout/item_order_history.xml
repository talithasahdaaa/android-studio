<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <!-- ORDER ID -->
    <TextView
        android:id="@+id/tvOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: #123"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <!-- TANGGAL -->
    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal: 01-01-2024"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"/>

    <!-- TOTAL BAYAR -->
    <TextView
        android:id="@+id/tvTotalBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: Rp 100.000"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"/>

    <!-- STATUS -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Belum Dibayar"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/black"/>

    <!-- BUTTON UPLOAD -->
    <Button
        android:id="@+id/btnUploadBukti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Bukti Pembayaran"
        android:backgroundTint="@android:color/holo_purple"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:visibility="visible"/>
</LinearLayout>
